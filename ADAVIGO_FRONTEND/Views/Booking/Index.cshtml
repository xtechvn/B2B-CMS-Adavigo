@{
    ViewData["Title"] = "Quản lý Booking";
}
<style>
    .daterangepicker td.start-date::before {
        content: "Bắt đầu"
    }

    .daterangepicker td.end-date::before {
        content: "Kết thúc"
    }
</style>

<section class="padding-main bg-white">
    <div class="row">
        <div class="col-md-6">
            <div class="flex">
                <div class="mr-2 line-btn-date mb10">
                    <input class="form-control datepicker-input " type="text" id="search_from_date" placeholder="Thời gian bắt đầu" />
                </div>
                <div class="mr-2 line-btn-date mb10">
                    <input class="datepicker-input form-control" type="text" id="search_to_date" placeholder="Thời gian kết thúc">
                </div>
                <a  class="btn-search btn-default mb10" style="line-height: 34px; color:#fff;" onclick="_booking.Filter()">Lọc</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="search-wrapper">
                <form action="" id="search" class="mb16" style="max-width:380px;margin-left: auto;">
                    <input type="search" class="input_search onclick-togle active" id="search_code" placeholder="Tìm kiếm mã đơn hàng">
                    <span class="search-btn" onclick="_booking.Filter()">
                        <button type="button">
                            <svg class="icon-svg">
                                <use xlink:href="/images/icons/icon.svg#search"></use>
                            </svg>
                        </button>
                    </span>
                </form>
            </div>
        </div>
    </div>
</section>
<section class="tab-menu-folder">
    <a href="#" class="active">Đơn hàng</a>
    <a class="hidden" href="#">Đơn Vinpearl</a>
    <a class="hidden" href="#">Landtour</a>
</section>
<section class="main-container clearfix">
    <div id="grid_data_listing">
    </div>

    <div class="hidden" id="grid_data_detail">
    </div>
</section>

@section scripts{
<script type="text/javascript" src="~/js/modules/booking.js"></script>
}




